FROM node:dubnium

RUN mkdir -p /app
WORKDIR /app

RUN apt-get update && apt-get install -y git openjdk-8-jdk

COPY .babelrc .
COPY package.json .
COPY package-lock.json .
COPY patches ./patches/

RUN npm --unsafe-perm install

ENV NODE_ENV=production
ENV BABEL_CACHE_PATH=/tmp/.babel_cache
ENV NO_UPDATE_NOTIFIER=1

HEALTHCHECK --interval=15s --timeout=5s --start-period=5s CMD node /app/poke.js
COPY app app
COPY *.js ./

EXPOSE 8080
EXPOSE 8443
USER node

CMD [ "node", "node_modules/@babel/node/lib/_babel-node", "server.js" ]

